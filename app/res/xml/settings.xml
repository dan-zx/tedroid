<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/sfx_category_title" >
        <ListPreference
            android:defaultValue="@raw/music_a_type"
            android:entries="@array/music_type_entries"
            android:entryValues="@array/music_type_values"
            android:key="@string/music_type_key"
            android:summary="@string/music_type_pref_summary"
            android:title="@string/music_type_pref_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/sounds_switch_key"
            android:summaryOff="@string/sounds_pref_off"
            android:summaryOn="@string/sounds_pref_on"
            android:title="@string/sounds_pref_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/data_category_title" >
        <Preference
            android:key="@string/delete_scores_key"
            android:title="@string/delete_scores_pref_title" />
        <Preference
            android:key="@string/restore_settings_key"
            android:title="@string/restore_settings_pref_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/about_category_title" >
        <PreferenceScreen
            android:key="@string/manual_key"
            android:summary="@string/manual_pref_summary"
            android:title="@string/manual_pref_title" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/tedroid_manual_url" />
        </PreferenceScreen>
        <PreferenceScreen
            android:key="@string/github_site_key"
            android:summary="@string/github_site_pref_summary"
            android:title="@string/github_site_pref_title" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/tedroid_github_url" />
        </PreferenceScreen>

        <Preference
            android:key="@string/open_source_licenses_key"
            android:summary="@string/open_source_licenses_pref_summary"
            android:title="@string/open_source_licenses_pref_title" />
        
        <Preference
            android:enabled="false"
            android:key="@string/version_key"
            android:summary="@string/unknown_version"
            android:title="@string/version_pref_title" />
    </PreferenceCategory>

</PreferenceScreen>