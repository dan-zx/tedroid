<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="6" >

    <mx.udlap.is522.tedroid.view.GameBoardView
        android:id="@+id/game_board"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/score_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:text="@string/score_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/score_text"
            android:layout_margin="8dp"
            android:text="@string/init_score"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lines_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/score"
            android:layout_margin="8dp"
            android:text="@string/lines_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lines_text"
            android:layout_margin="8dp"
            android:text="@string/init_lines"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/next_tetromino_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lines"
            android:layout_margin="8dp"
            android:text="@string/next_tetromino_text"
            android:textStyle="bold" />

        <mx.udlap.is522.tedroid.view.NextTetrominoView
            android:id="@+id/next_tetromino"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/next_tetromino_text"
            android:layout_margin="8dp" />
    </RelativeLayout>

</LinearLayout>